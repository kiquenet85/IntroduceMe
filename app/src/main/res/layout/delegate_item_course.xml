<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:layout_constrainedHeight="true"
                                                   app:layout_constrainedWidth="true"
                                                   android:id="@+id/coordinatorLayout">


    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.6" android:id="@+id/da_course_guideline"/>
    <View
            android:id="@+id/da_course_divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/da_course_item_certification"
            android:layout_marginTop="8dp"/>
    <TextView
            tools:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_course_title_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/da_course_guideline"
            android:layout_marginEnd="8dp"/>
    <TextView
            tools:text="Start date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_course_title_start_date" app:layout_constraintStart_toStartOf="@+id/da_course_guideline"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/da_course_title_end_date"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            tools:text="Some large date info string."
            android:layout_width="62dp"
            android:layout_height="63dp"
            android:gravity="center|fill_horizontal"
            android:maxLines="3"
            android:inputType="textMultiLine"
            app:layout_constrainedWidth="true"
            android:id="@+id/da_course_item_start_date" app:layout_constraintStart_toStartOf="@+id/da_course_guideline"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/da_course_title_start_date"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.058"/>
    <TextView
            tools:text="End date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_course_title_end_date" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/da_course_title_start_date" android:layout_marginStart="8dp"/>
    <TextView
            tools:text="Some large date info string."
            android:layout_width="58dp"
            android:layout_height="65dp"
            android:gravity="center|fill_horizontal"
            android:maxLines="3"
            android:inputType="textMultiLine"
            app:layout_constrainedWidth="true"
            android:id="@+id/da_course_item_end_date"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/da_course_title_end_date"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.714" app:layout_constraintStart_toEndOf="@+id/da_course_item_start_date"/>
    <TextView
            tools:text="Course Name Institute"
            android:layout_width="109dp"
            android:layout_height="41dp"
            android:gravity="center|fill_horizontal"
            android:maxLines="3"
            android:inputType="textMultiLine"
            app:layout_constrainedWidth="true"
            android:id="@+id/da_course_item_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/da_course_title_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/da_course_guideline"
            android:layout_marginEnd="8dp"/>
    <TextView
            tools:text="Certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_course_title_certification" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/da_course_item_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/da_course_guideline"
            android:layout_marginEnd="8dp"/>
    <TextView
            tools:text="Certification Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_course_item_certification"
            android:gravity="center|fill_horizontal"
            android:maxLines="3"
            android:inputType="textMultiLine"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/da_course_title_certification" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/da_course_guideline" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>