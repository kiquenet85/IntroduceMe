<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:layout_constrainedHeight="true"
                                                   app:layout_constrainedWidth="true"
                                                   android:id="@+id/coordinatorLayout">

    <TextView
            tools:text="Title item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_academium_item_title"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            tools:text="Academy name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_academium_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/da_academium_item_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <View
            android:id="@+id/da_we_divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/da_academium_item_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>